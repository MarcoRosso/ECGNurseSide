<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
      <ImageView
        android:id="@+id/tabtitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tabtitlethree"
         />
     <ScrollView 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="#00A185">
   <LinearLayout 
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:orientation="vertical" > 
    <RelativeLayout 
        android:layout_marginTop="5dp" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
     <ImageView
        android:id="@+id/upload_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/upload_title" 
         />
     <TextView 
        android:id="@+id/upload_middle"
        android:text="     您可以在此选择本地心电文件并上传至云端。"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:textColor="#98A2B0"
        android:layout_below="@+id/upload_title"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FFFFFF" 
         /> 
     <TextView
        android:id="@+id/upload_name"
        android:maxLength="20"
        android:gravity="center"
        android:textColor="#98A2B0"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_filechoose"
         />
     <Button
         android:id="@+id/upload_fileconfirm"
         android:onClick="choosefile"
         android:layout_alignTop="@+id/upload_name"
         android:layout_alignBottom="@+id/upload_name"
         android:layout_toRightOf="@+id/upload_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:background="@drawable/upload_fileconfirm"
         />
     <Button
         android:id="@+id/upload_confirm"
         android:onClick="uploadconfirm"
         android:layout_below="@+id/upload_middle"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@drawable/upload_button"
         />
    </RelativeLayout>

            <RelativeLayout 
        android:layout_marginTop="20dp" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
     <ImageView
        android:id="@+id/read_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/read_title"
         />
     <TextView 
        android:id="@+id/read_middle"
        android:text="     您可以在此选择本地心电文件打开显示心电图与心率。"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:textColor="#98A2B0"
        android:layout_below="@+id/read_title"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FFFFFF" 
         />
     <TextView
        android:id="@+id/read_name"
        android:maxLength="20"
        android:gravity="center"
        android:textColor="#98A2B0"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/read_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_filechoose"
         />
     <Button
         android:id="@+id/read_fileconfirm"
         android:onClick="choosefile_read"
         android:layout_alignTop="@+id/read_name"
         android:layout_alignBottom="@+id/read_name"
         android:layout_toRightOf="@+id/read_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:background="@drawable/upload_fileconfirm"
         />
     <Button
         android:id="@+id/read_confirm"
         android:onClick="readconfirm"
         android:layout_below="@+id/read_middle"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@drawable/read_button"
         />
       </RelativeLayout>
       <RelativeLayout 
        android:layout_marginTop="20dp" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
     <ImageView
        android:id="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/download_title"
         />
     <TextView 
        android:id="@+id/download_middle"
        android:text="     您可以在此选择云端心电文件下载到本地。"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:textColor="#98A2B0"
        android:layout_below="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FFFFFF" 
         />
     <TextView
        android:id="@+id/download_name"
        android:maxLength="20"
        android:gravity="center"
        android:textColor="#98A2B0"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/download_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_filechoose"
         />
     <Button
         android:id="@+id/download_fileconfirm"
         android:onClick="downloadfile_choose"
         android:layout_alignTop="@+id/download_name"
         android:layout_alignBottom="@+id/download_name"
         android:layout_toRightOf="@+id/download_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:background="@drawable/upload_fileconfirm"
         />
     <Button
         android:id="@+id/download_confirm"
         android:onClick="downloadfile_confirm"
         android:layout_below="@+id/download_middle"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@drawable/download_button"
         />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView> 

</LinearLayout>
